{
	"atom": {
		"rewriteTsconfig": true
	},
	"compileOnSave": false,
	"compilerOptions": {
		"noEmitOnError": false,
		"noImplicitAny": true,
		"sourceMap": false,
		"target": "ES6",
		"module": "commonjs",
		"removeComments": true,
		"noLib": true,
		"outDir": "built",
		"rootDir": "src"
	},
	"filesGlob": [
		"./node_modules/typescript/lib/lib.es6.d.ts",
		"./typings/bundle.d.ts",
		"./src/**/*.ts"
	],
	"files": [
		"./node_modules/typescript/lib/lib.es6.d.ts",
		"./typings/bundle.d.ts",
		"./src/api-server.ts",
		"./src/api/delete.ts",
		"./src/api/register.ts",
		"./src/api/rename.ts",
		"./src/argv.ts",
		"./src/check-dependencies.ts",
		"./src/config.ts",
		"./src/index.ts",
		"./src/server.ts"
	]
}
